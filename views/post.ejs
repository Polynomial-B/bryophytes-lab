<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <title>Document</title>
</head>

<body>
  <div class="main">
    <%- include('./partials/nav') %>
      <h1>Post</h1>
      <!-- ? action is the route this form talks to-->
      <div class="form-div">
        <form action="/mosses" method="POST">
          <label for="commonName">Common Name:</label>
          <input type="text" name="commonName" id="commonName" required>
          <label for="latinName">Latin Name:</label>
          <input type="text" name="latinName" id="latinName" required>
          <label for="divison">Division:</label>
          <input type="text" name="division" id="division" required>
          <label for="growthForm">Growth Form:</label>
          <input type="text" name="growthForm" id="growthForm" required>
          <label for="image">Image URL:</label>
          <input type="url" name="image" id="image">
          <% if (typeof errorMessage !== 'undefined') { %>
            <p style="color: rgb(145, 0, 0)"><%= errorMessage %></p>
          <% } %>
          <button class="submit-button" type="submit">Submit</button>
      </div>
      </form>
      
</body>

</html>